@model PetFinder.Models.Pet
@{
    ViewData["Title"] = "Add Pet";
}
<h1>Add New Pet</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Disability" class="control-label"></label>
                <input asp-for="Disability" class="form-control" />
                <span asp-validation-for="Disability" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PetTypeId" class="control-label"></label>
                <select asp-for="PetTypeId" class ="form-control" asp-items="ViewBag.PetTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BreedId" class="control-label"></label>
                <select asp-for="BreedId" class ="form-control" asp-items="ViewBag.BreedId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <div class="input-group mb-3">
                    <div class="custom-input">
                        <input id="ImageFile" asp-for="ImageFile" accept="image/*" class="custom-file-input" />
                        <label for="ImageFile" class="custom-file-label">Choose image...</label>
                    </div>
                </div>
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-secondary" asp-controller="Pet" asp-action="Index">Cancel</a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
